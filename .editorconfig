# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true

[**.ts]
indent_style = tab
indent_size = 4

[**.js]
indent_style = tab
indent_size = 4

[**.json]
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2

[**.html]
indent_style = tab
indent_size = 2
